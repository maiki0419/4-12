<h1 class="title">Editing Book</h1>


<% if @book.errors.any? %>
  <div class="errors-content">
    <p class="errors-text"><%= @book.errors.count %>error</p>
    <ul class="errors-message" >
      <% @book.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>

<% end %>

<div class="content">
  <%= form_with model: @book,url: update_book_path(@book.id),method: :patch,local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Boby</p>
    <%= f.text_area :body %>
    <%= f.submit "Update Book",class: "submit" %>
  <% end %>

  <%= link_to "Show", book_path(@book.id), class: "link" %>|
  <%= link_to "Back",books_path,class: "link" %>

</div>
